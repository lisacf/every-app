<%= form_for [@rateable, @rating] do |f| %>
			<div class="row">
				<div class="col-sm-4">
					<b>Rate</b>
					<div class="ratings clearfix" >
						<%= f.radio_button :star, 5, option = { required: true}  %><%= f.label :star_5, '5 stars', title: "Rocks!" %>
						<%= f.radio_button :star, 4, option = { required: true}  %><%= f.label :star_4, '4 stars', title: "Delicious" %>
						<%= f.radio_button :star, 3, option = { required: true, checked: true }  %><%= f.label :star_3, '3 stars', title: "Good" %>
						<%= f.radio_button :star, 2, option = { required: true}  %><%= f.label :star_2, '2 stars', title: "Kinda bad" %>
						<%= f.radio_button :star, 1, option = { required: true}  %><%= f.label :star_1, '1 star', title: "One was enough" %>
					</div>
				</div>
				<div class="form-group col-sm-8">
					<%= f.label :review %>
					<%= f.text_area :review, class:"form-control", required: "required" %>
				</div>
			</div>
		<div class="modal-footer"><%= f.submit "Submit Review", class:"btn btn-primary" %></div>
<% end %>