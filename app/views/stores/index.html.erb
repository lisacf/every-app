<h1>Listing stores</h1>
<%= form_tag stores_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], class: "form-control" %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>User</th>
      <th>Facebook</th>
      <th>Average rating</th>
      <th>Ratings count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.url %></td>
        <td><%= store.address %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude%></td>
        <td><%= store.user_id %></td>
        <td><%= store.facebook %></td>
        <td><%= store.average_rating %></td>
        <td><%= store.ratings_count %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
